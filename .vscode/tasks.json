{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build"],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": ["CMake Build"],
            "type": "shell",
            "command": "${workspaceFolder}/build/PlayAsGobo.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}